<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ListConversationsActivity">

    <androidx.constraintlayout.utils.widget.MotionLabel
        android:id="@+id/toolbar_Conversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trò chuyện"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#0C0B0B"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_conversation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_Conversation"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        tools:listitem="@layout/itemview_chats"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>